<odoo>
    <record id="view_account_form_revaluation_inherit" model="ir.ui.view">
        <field name="name">account.account.form.revaluation.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_type']" position="after">
                <field name="allow_revaluation"/>
            </xpath>
        </field>
    </record>
</odoo>
